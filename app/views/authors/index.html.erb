<% if !flash[:notice].blank? %>
  <div class="notice">
    <%= flash[:notice] %>
  </div>
<% end %>


<style>
.red-link { color: red }
table {
  border: 2px solid #CCC;
}
table td, table th {
  padding: 10px;
  border: 2px solid #CCC;
}

table td a {
  text-decoration: none;
}

table td a:link, table td a:visited {
  text-decoration: none;
  color: blue;
}

table td a:hover, table td a:active {
  color: crimson;
}
</style>
