<%= link_to "Add New Author", new_author_path, class: "red-link" %>

<p>
  <%= number_to_currency(34.5, precision: 0, unit: "kr", format: "%n %u") %>
</p>

<p>
  <%= number_to_phone(1234567890, area_code: true, delimiter: '-') %>
</p>

<hr>

<table cellpadding=0 cellspacing=0>
  <tr>
    <th>Name</th>
    <th>Age</th>
    <th>Old Person?</th>
    <th>View Details</th>
    <th>Make Changes</th>
    <th>Remove Author</th>
  </tr>
  <% @authors.each do |author| %>
    <tr>
      <td>
        <%= author.name %>
      </td>
      <td>
        <%= author.age %>
      </td>
      <td>
        <%= author.age.to_i > 35 ? "Yes" : "No" %>
      </td>
      <td>
        <%= link_to "Show Author Details", author_path(author) %>
      </td>
      <td>
        <%= link_to "Edit Author", edit_author_path(author) %>
      </td>
      <td>
        <%= link_to "Delete Author", delete_author_path(author) %>
      </td>
    </tr>
  <% end %>
</table>