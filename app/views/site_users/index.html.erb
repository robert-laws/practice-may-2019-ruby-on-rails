<h1>All Site Users</h1>

<section>
  <% @site_users.each do |site_user| %>
    <article>
      <h4><%= site_user.name %></h4>
      <p>Username: <strong><%= site_user.username %></strong></p>
      <p>First Name: <%= site_user.first_name %></p>
      <p>Last Name: <%= site_user.last_name %></p>
      <p><%= link_to "Edit User", edit_site_user_path(site_user) %></p>
    </article>
    <hr>
  <% end %>
</section>

<section>
  <%= link_to "Add New Site User", new_site_user_path %>
</section>